<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>nameServlet</servlet-name>
        <servlet-class>siberteam.onboarding.gso121.name.NameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>nameServlet</servlet-name>
        <url-pattern>/name</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>db-url</param-name>
        <param-value>jdbc:postgresql://localhost:5432/store_db</param-value>
    </context-param>
    <context-param>
        <param-name>db-user</param-name>
        <param-value>store_dev</param-value>
    </context-param>
    <context-param>
        <param-name>db-password</param-name>
        <param-value>store_dev</param-value>
    </context-param>
</web-app>